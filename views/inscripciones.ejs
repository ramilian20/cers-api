<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/usuarios.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <title>Inscripciones</title>
  </head>
  <body>
    <section class="cabecera-usuarios">
      <div class="header">
        <img src="../img/imagenprincipal.jpeg" />
      </div>
    </section>

    <section class="formulario">
      <div class="targeta-form">
        <div class="cabecera-targeta">
          <img src="../img/LOGO.jpg" width="100px" height="100px" />
        </div>
        <h1 class="titulo">Formulario de Inscripcion</h1>
        <div class="form">
          <form method="POST" class="form">
            <label>Identificacion</label>
            <input
              type="number"
              class="form-input"
              id="identificacion"
              name="identificacion"
              placeholder="Introdusca su identificacion"
            />
            <label>Nombre del Estudiante</label>
            <input
              type="text"
              class="form-input"
              id="nombre"
              name="nombre"
              placeholder="Ingrese su nombre"
            />
            <label>Apellido del Estudiante</label>
            <input
              type="text"
              class="form-input"
              id="apellido"
              name="apellido"
              placeholder="Ingrese su apellido"
            />
            <label>Programa</label>
            <input
              type="text"
              class="form-input"
              id="programa"
              name="programa"
              placeholder="Porfavor ingrese su programa"
            />
            <label>Telefono</label>
            <input
              type="number"
              class="form-input"
              id="telefono"
              name="telefono"
              placeholder="Ingrese su telefono"
            />
            <label>Correo</label>
            <input
              type="email"
              class="form-input"
              id="correo"
              name="correo"
              placeholder="Ingrese su email"
            />
            <input
              type="submit"
              class="btn"
              id="enviar"
              name="enviar"
              value="Inscribir"
            />
          </form>
        </div>
        <div class="atras">
          <button class="boton" onclick="window.location='principal'">
            Atras
          </button>
        </div>
      </div>
    </section>
  </body>
</html>
